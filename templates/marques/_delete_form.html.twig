<form method="post" class="d-inline" action="{{ path('app_marques_delete', {'id': marque.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ marque.id) }}">
    <button class="btn btn-outline-danger">
        <i class="fa fa-trash"></i>&nbsp;{{ "Delete" | trans }}
    </button>
</form>
