{% extends 'base-admin.html.twig' %}

{% block main_content %}
    <div class="row">
        <div class="col-12 col-md-6 col-lg-5">

            {% embed 'models/_form.html.twig' %}
                {% block form_actions %}
                {% endblock %}
            {% endembed %}

            <div class="row mt-4 mt-lg-5">
                <div class="col-12 col-lg-6">
                    <a href="{{ path('app_models_edit', {'id': model.id}) }}" class="btn btn-primary">
                        <i class="fa fa-pencil"></i>&nbsp;{{ "Edit"|trans }}
                    </a>
                    <a href="{{ path('app_models_by_marque_index', { id: model.marque.id }) }}" class="btn btn-outline-secondary">
                        <i class="fa fa-arrow-left"></i>&nbsp;{{ "Back"|trans }}
                    </a>
                </div>
                <div class="col-12 col-lg-6 text-lg-right">
                    {{ include('models/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
