{% extends 'base-admin.html.twig' %}

{% block main_content %}
    <div class="row">
        <div class="col-12 col-md-6 col-lg-5">

            {% embed 'energies/_form.html.twig' %}
                {% block form_actions %}
                {% endblock %}
            {% endembed %}

            <div class="row mt-4 mt-lg-5">
                <div class="col-12 col-lg-6">
                    <button class="btn btn-primary" type="submit" form="{{ form.vars.attr.id }}">
                        <i class="fa fa-check"></i>&nbsp;{{ "Save changes"|trans }}
                    </button>
                    <a href="{{ path('app_energies_index') }}" class="btn btn-outline-secondary">
                        <i class="fa fa-arrow-left"></i>&nbsp; {{ "Back"|trans }}
                    </a>
                </div>
                <div class="col-12 col-lg-6 text-lg-right   ">
                    {{ include('energies/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
